@model LogicUniversityTeam5.Models.CombinedViewModel
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top" id="navbar">
        <a class="navbar-brand" href="#">
            <img style="width:40px;height:40px;" src="~/Content/Image/LogicUniLogo.jpg" alt="" />
            Logic Stationeries
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Manage Request
                    </a>
                    <div class="dropdown-menu collapse" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="@Url.Action("ViewStationeryCatalogue","Requisition")">Make New Request</a>
                        <a class="dropdown-item" href="@Url.Action("SearchRequisitionForm","ViewPastRequest",new { id= Model.Employees[0].EmployeeID })">View Past Requests</a>
                    </div>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("changeCollectionPoint","ChangeCollectionPoint")">Manage Department Information</a>
                </li>

            </ul>
            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <input type="submit" class="btn btn-outline-secondary float-right mt-3" value="Logout" />
            }
        </div>
    </nav>
    <script>
        var prevScrollpos = window.pageYOffset;
        window.onscroll = function () {
            var currentScrollPos = window.pageYOffset;
            if (prevScrollpos > currentScrollPos) {
                document.getElementById("navbar").style.top = "0";
            } else {
                document.getElementById("navbar").style.top = "-100px";
            }
            prevScrollpos = currentScrollPos;
        }
    </script>
</body>
